import { SITE, SOCIALS } from "@consts"
import TwinklingStars from "@components/TwinklingStars.astro"
import MeteorShower from "@components/MeteorShower.astro"
import moment from "moment"

function calcWorkDateDiff(work: { company: string; role: string; dateStart: Date; dateEnd: string | Date; technologiesUsed?: string[] | undefined }) {
  if (work.dateEnd === 'Now') {
    return moment(new Date()).diff(work.dateStart, 'years', true);
  }
  return moment(work.dateEnd).diff(work.dateStart, 'years', true);
}

const techMap = new Map();

const workData = await getCollection("work").then(work => work.map(item => item.data)) || [];

for (const work of workData) {
  const years = calcWorkDateDiff(work);
  for (const tech of work.technologiesUsed || []) {
    if (techMap.has(tech)) {
      techMap.get(tech).years += years;
      continue;
    }
    techMap.set(tech, { name: tech, years });
  }
}

const data = Array.from(techMap.entries()).map(([_, value]) => value).sort((a, b) => b.years - a.years);

const posts = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0,3)

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0,3)

const stack = [
  { 
    text: "React", 
    icon: "react", 
    href: "https://astro.build" 
  },
  { 
    text: "Javascript", 
    icon: "javascript", 
    href: "https://www.javascript.com" 
  },
  { 
    text: "Typescript", 
    icon: "typescript", 
    href: "https://www.typescriptlang.org" 
  },
  { 
    text: "Tailwind", 
    icon: "tailwind", 
    href: "https://tailwindcss.com" 
  },
  { 
    text: "Node.js", 
    icon: "node", 
    href: "https://tailwindcss.com" 
  },
]
